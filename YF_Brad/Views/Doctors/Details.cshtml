@model YF_Brad.Models.Doctor

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

@{
    if (ViewBag.findNameMLN[0] == "NR")
    {
        <div class="alert alert-danger" role="alert"><b>There Seems To Be An Issue</b> Could not find any MLN for @ViewBag.FirstName @ViewBag.LastName.</div>
    }
    else if (ViewBag.findNameMLN[0] == "TMR")
    {
        <div class="alert alert-danger" role="alert"><b>There Seems To Be An Issue</b> Too many results for @ViewBag.FirstName @ViewBag.LastName.</div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <b>MLN Results for @ViewBag.FirstName @ViewBag.LastName</b>
            <ul>
            @{ 
                foreach(string ln in ViewBag.findNameMLN)
                {
                    <li>@ln</li>
                }
            }
            </ul>
        </div>
    }
}

